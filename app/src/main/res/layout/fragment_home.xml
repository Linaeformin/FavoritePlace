<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/logo_title_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/logo_title" />
                <ImageButton
                    android:id="@+id/alert_off_ib"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@color/white"
                    android:src="@drawable/alert_off" />
            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:backgroundTint="@color/light_gray"
                    android:text="로그인이 필요한 서비스입니다."
                    android:textColor="@color/black"/>

                <Button
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="50dp"
                    android:backgroundTint="@color/main"
                    android:text="로그인"
                    android:layout_gravity="center"
                    app:layout_constraintStart_toStartOf="@+id/button"/>
            </FrameLayout>

            <RelativeLayout
                android:id="@+id/RelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">


                <ImageButton
                    android:id="@+id/recommend_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round"
                    android:src="@drawable/img1" />
                <TextView
                    android:id="@+id/recommend_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:text="추천 랠리"
                    android:textColor="@color/white" />

                <ImageButton
                    android:id="@+id/recommend_more_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignEnd="@+id/recommend_btn"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/recommend_tv"
                    android:src="@drawable/btn_arrow_more"
                    app:layout_constraintRight_toRightOf="@+id/recommend_btn"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageButton
                    android:id="@+id/new_item_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/recommend_btn"
                    android:background="@drawable/round"
                    android:src="@drawable/img2" />

                <TextView
                    android:id="@+id/new_item_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/new_item_btn"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="신규 아이템"
                    android:textColor="@color/white" />

                <ImageButton
                    android:id="@+id/new_item_more_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:backgroundTint="@color/black"
                    android:layout_alignEnd="@+id/new_item_btn"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/new_item_tv"
                    android:src="@drawable/btn_arrow_more" />
            </RelativeLayout>

            <TextView
                android:id="@+id/real_time_post_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="실시간 인기글"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="40dp"/>
            <TextView
                android:id="@+id/real_time_post2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="소식을 알려드려요.🔥"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginTop="5dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/real_time_post_tv"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/home_banner_cv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="40dp"
                app:cardCornerRadius="6dp"

                app:layout_constraintTop_toBottomOf="@id/linearLayout1"
                android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/home_banner_iv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="@drawable/round"
                android:src="@drawable/banner1" >


        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>